

<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @user_apr.to_fs(:percentage, {:precision=>4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @user_months/12 %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @user_pv.to_fs(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @price.to_fs(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
